{
  "format": "page",
  "id": "blog_post",
  "label": "blog_post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Write article title here"
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Excerpt",
          "placeholder": "Add a short description or preview of the article"
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "Select a category (e.g., Accounting, Investing, Stocks & Markets)",
          "options": [
            "Personal Finance",
            "Accounting",
            "Investing",
            "Banking & Finance",
            "Tax & Compliance",
            "Stocks & Markets"
          ],
          "default_value": "Personal Finance"
        }
      },
      "published_date": {
        "type": "Date",
        "config": {
          "label": "Published Date",
          "placeholder": ""
        }
      },
      "hero_image": {
        "type": "Image",
        "config": {
          "label": "Hero Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "read_time_minutes": {
        "type": "Number",
        "config": {
          "label": "Read Time (Minutes)",
          "placeholder": "18"
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "Write the full article content here, including headings and paragraphs.",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "author",
              "fields": ["name", "role", "avatar"]
            }
          ]
        }
      },
      "featured": {
        "type": "Boolean",
        "config": {
          "label": "Featured",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
